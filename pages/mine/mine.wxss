/* pages/mine/mine.wxss */
@import "/pages/bottom_menu/bottom_menu";

page{
  background-color:#EFEFEF ;
}
.scv{
  background-color: #EFEFEF; 
  width: 100%;
  height: 90%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
}

.person{
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.person image{
  width: 150rpx;
  height: 150rpx;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.name{
  margin: 30rpx 0;
}

.self_content{
  background-color: white;
  margin-top: 30rpx;
  padding-top: 30rpx;
}

.content{
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #cccccc;
  word-wrap: break-all;
}
.showtime{
  font-size: 30rpx;
  margin-top: 20rpx;
  color:#5E5D5D ;
}

.like{
  margin-left: 4%;
  margin-right: 4%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
}
.like image{
  width: 40rpx;
  height: 40rpx;
  padding: 0 10rpx;
}
.delete{
  background-color: #E62227;
  width:150rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  right: 30rpx;
  font-size: 40rpx;
  border-radius: 10rpx;
  color:white;
}